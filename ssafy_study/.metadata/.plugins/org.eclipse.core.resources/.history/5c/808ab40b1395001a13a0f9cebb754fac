package study0502;

import java.util.Arrays;
import java.util.Scanner;

public class Main_3020_개똥벌레 {

	static int N, H;
	static int[] s, j;

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		N = sc.nextInt();
		H = sc.nextInt();
		s = new int[H];
		j = new int[H];

		for (int i = 0; i < N; i++) {
			int len = sc.nextInt();
			if (i % 2 == 0)
				s[len - 1]++;
			else
				j[len - 1]++;
		}

		for (int i = H - 2; i >= 0; i--) {
			s[i] += s[i + 1];
			j[i] += j[i + 1];
		}
		int min = Integer.MAX_VALUE;
		int cnt = 0;
		for (int i = 0; i < H; i++) {
			int sum = s[i] + j[H - 1 - i];
			if (min > sum) {
				min = sum;
			}
		}
		for (int i = 0; i < H; i++) {
			int sum = s[i] + j[H - 1 - i];
			if (min == sum) {
				cnt++;
			}
		}
		System.out.println(min + " " + cnt);
	}

}
