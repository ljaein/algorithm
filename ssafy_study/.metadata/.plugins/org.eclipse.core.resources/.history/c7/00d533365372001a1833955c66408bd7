package study0401;

import java.util.Scanner;

public class Main_14890_경사로 {

	static int N, L;
	static int[][] map;

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		N = sc.nextInt();
		L = sc.nextInt();
		map = new int[N][N];
		for (int i = 0; i < N; i++) {
			for (int j = 0; j < N; j++) {
				map[i][j] = sc.nextInt();
			}
		}
		int cnt = 0;
		// 가로줄 검사
		for (int i = 0; i < 1; i++) { // 바꿔
			boolean check = true;
			jf: for (int j = 0; j < N - 1; j++) {
				System.out.println("cur : " + j);
				if (map[i][j] == map[i][j + 1]) {
					continue;
				} else if (map[i][j] + 1 == map[i][j + 1]) {// 1 커진 경우
					for (int k = j; k > j - L; k--) {
						if (!safe(i, k) || map[i][k] != map[i][j]) {
							check = false;
							break jf;
						}
					}
				} else if (map[i][j] - 1 == map[i][j + 1]) {// 1 작아진 경우
					for (int k = j + 1; k < j + 1 + L; k++) {
						if (!safe(i, k) || map[i][k] != map[i][j + 1]) {
							check = false;
							break jf;
						}
					}
					j += L - 1;
					System.out.println(j);
				} else {
					check = false;
					break jf;
				}
			}
			if (check)
				cnt++;

		}
		System.out.println(cnt);
	}

	static boolean safe(int y, int x) {
		if (y < 0 || x < 0 || y >= N || x >= N)
			return false;
		return true;
	}

	static void goPre(int y, int x) {

	}

}
