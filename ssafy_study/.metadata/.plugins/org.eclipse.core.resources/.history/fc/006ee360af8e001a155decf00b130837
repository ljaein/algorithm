package study0501;

import java.util.Scanner;

public class Main_1756_피자굽기 {

	static int D, N, ans;
	static int[] oven;

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		D = sc.nextInt();
		N = sc.nextInt();
		oven = new int[D];
		for (int i = 0; i < D; i++) {
			oven[i] = sc.nextInt();
		}
		for (int i = 0; i < N; i++) {
			int r = sc.nextInt();
			go(r);
		}
		System.out.println(ans + 1);
	}

	static void go(int r) {
		for (int i = 0; i < D; i++) {
			if (oven[i] < r) {
				if (i - 1 < 0) {
					ans = -1;
					return;
				}
				oven[i - 1] = 0;
				ans = i - 1;
				break;
			}
		}
	}

}
